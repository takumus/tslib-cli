{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "{{{destDir}}}/types",
    "declaration": true,
    "target": "es2015",
    "module": "es2015",
    "strict": true
  },
  "include": [
    "{{{entryDir}}}/**/*"
  ],
  "exclude": [
    "node_modules",
    "{{{destDir}}}"
  ]
}